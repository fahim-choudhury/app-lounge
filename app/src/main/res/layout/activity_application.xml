<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".application.ApplicationActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="@dimen/default_elevation"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="fill_vertical"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/layout_padding_large"
            android:paddingBottom="@dimen/layout_padding_large">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/layout_padding_large"
                android:paddingEnd="@dimen/layout_padding_large">

                <ImageView
                    android:id="@+id/app_icon"
                    android:layout_width="@dimen/app_icon_size_large"
                    android:layout_height="@dimen/app_icon_size_large"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/app_icon_content_description"
                    android:src="@drawable/ic_app_default" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/layout_margin_large"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/app_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_large"
                        tools:text="App title" />

                    <TextView
                        android:id="@+id/app_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/layout_margin_medium"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textSize="@dimen/text_size_medium"
                        tools:text="App author" />

                    <TextView
                        android:id="@+id/app_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/layout_margin_medium"
                        android:background="@drawable/app_category_border"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textSize="@dimen/text_size_medium"
                        tools:text="App category" />

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/app_install_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin_large"
                android:paddingStart="@dimen/layout_padding_large"
                android:paddingEnd="@dimen/layout_padding_large">

                <LinearLayout
                    android:id="@+id/app_download_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/app_size"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/app_download_mb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/state_installing"
                            android:textColor="?android:textColorSecondary"
                            android:textSize="@dimen/text_size_small"
                            tools:text="10.1 MB/20.6 MB" />

                        <TextView
                            android:id="@+id/app_download_percentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/layout_margin_medium"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="?android:textColorPrimary"
                            android:textSize="@dimen/text_size_small"
                            tools:text="54%" />

                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/app_download_progress"
                        style="?android:progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/layout_margin_small" />

                </LinearLayout>

                <TextView
                    android:id="@+id/app_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/layout_margin_medium"
                    android:layout_toStartOf="@id/app_install"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="@dimen/text_size_small"
                    tools:text="App size" />

                <include
                    layout="@layout/install_button_layout"
                    android:layout_width="@dimen/install_button_width"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/layout_margin_medium" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_divider_height"
                android:layout_marginStart="@dimen/layout_margin_medium"
                android:layout_marginTop="@dimen/layout_margin_large"
                android:layout_marginEnd="@dimen/layout_margin_medium"
                android:background="@color/colorDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin_large"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/layout_margin_large"
                    android:layout_marginEnd="@dimen/layout_margin_large"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/app_description_title"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/app_description_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin_medium"
                    android:background="?android:selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingStart="@dimen/layout_padding_large"
                    android:paddingTop="@dimen/layout_padding_medium"
                    android:paddingEnd="@dimen/layout_padding_large"
                    android:paddingBottom="@dimen/layout_padding_medium">

                    <TextView
                        android:id="@+id/app_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/app_expand_description"
                        android:ellipsize="end"
                        android:maxLines="4"
                        android:textSize="@dimen/text_size_medium"
                        tools:text="App description" />

                    <ImageView
                        android:id="@+id/app_expand_description"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/layout_margin_medium"
                        android:src="@drawable/ic_app_description_expand" />

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_divider_height"
                android:layout_marginStart="@dimen/layout_margin_medium"
                android:layout_marginTop="@dimen/layout_margin_large"
                android:layout_marginEnd="@dimen/layout_margin_medium"
                android:background="@color/colorDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/layout_padding_large">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/app_ratings_title"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin_medium"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/app_rating_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?android:selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/layout_padding_medium">

                        <TextView
                            android:id="@+id/app_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/app_border_good"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_size_large"
                            tools:text="App rating" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/layout_margin_medium"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:contentDescription="@string/app_rating_content_description"
                                android:src="@drawable/ic_app_rating" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/layout_margin_medium"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@string/app_rating"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/text_size_large" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/app_privacy_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/layout_margin_medium"
                        android:layout_marginEnd="@dimen/layout_margin_medium"
                        android:background="?android:selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/layout_padding_medium">

                        <TextView
                            android:id="@+id/app_privacy_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/app_border_good"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_size_large"
                            tools:text="App privacy" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/layout_margin_medium"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:contentDescription="@string/app_privacy_score_content_description"
                                android:src="@drawable/ic_app_privacy" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/layout_margin_medium"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@string/app_privacy_score"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/text_size_large" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/app_energy_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?android:selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/layout_padding_medium">

                        <!-- TODO Don't set default background to red -->
                        <TextView
                            android:id="@+id/app_energy_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/app_border_bad"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_size_large"
                            tools:text="App energy" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/layout_margin_medium"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:contentDescription="@string/app_energy_score_content_description"
                                android:src="@drawable/ic_app_energy" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/layout_margin_medium"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@string/app_energy_score"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/text_size_large" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_divider_height"
                android:layout_marginStart="@dimen/layout_margin_medium"
                android:layout_marginTop="@dimen/layout_margin_large"
                android:layout_marginEnd="@dimen/layout_margin_medium"
                android:background="@color/colorDivider" />

            <LinearLayout
                android:id="@+id/app_screenshots_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin_large"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/layout_margin_large"
                    android:layout_marginEnd="@dimen/layout_margin_large"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/app_screenshots_title"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold" />

                <HorizontalScrollView
                    android:id="@+id/app_images_scroll_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin_large"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/app_images_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp" />

                </HorizontalScrollView>

            </LinearLayout>

            <View
                android:id="@+id/app_images_divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_divider_height"
                android:layout_marginStart="@dimen/layout_margin_medium"
                android:layout_marginTop="@dimen/layout_margin_large"
                android:layout_marginEnd="@dimen/layout_margin_medium"
                android:background="@color/colorDivider" />

            <LinearLayout
                android:id="@+id/exodus_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin_large"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/layout_margin_large"
                    android:layout_marginEnd="@dimen/layout_margin_large"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/app_privacy_title"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/app_permissions_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin_medium"
                    android:background="?android:selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingStart="@dimen/layout_padding_large"
                    android:paddingTop="@dimen/layout_padding_medium"
                    android:paddingEnd="@dimen/layout_padding_large"
                    android:paddingBottom="@dimen/layout_padding_medium">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/app_permissions_icon"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/app_permissions_title"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="@dimen/text_size_medium" />

                    <ImageView
                        android:id="@+id/app_permissions_icon"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/layout_margin_medium"
                        android:src="@drawable/ic_app_description_expand" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/app_trackers_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingStart="@dimen/layout_padding_large"
                    android:paddingTop="@dimen/layout_padding_medium"
                    android:paddingEnd="@dimen/layout_padding_large"
                    android:paddingBottom="@dimen/layout_padding_medium">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/app_trackers_icon"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/app_trackers_title"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="@dimen/text_size_medium" />

                    <ImageView
                        android:id="@+id/app_trackers_icon"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/layout_margin_medium"
                        android:src="@drawable/ic_app_description_expand" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/layout_padding_large"
                android:paddingTop="@dimen/layout_padding_large"
                android:paddingEnd="@dimen/layout_padding_large">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/app_information_title"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin_medium"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_app_version" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/layout_margin_medium"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/app_version"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_size_large" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/app_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/layout_margin_medium"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textSize="@dimen/text_size_large" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin_medium"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_app_updated_on" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/layout_margin_medium"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/app_updated_on"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_size_large" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/app_updated_on"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/layout_margin_medium"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textSize="@dimen/text_size_large" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin_medium"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_app_min_android" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/layout_margin_medium"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/app_min_android"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_size_large" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/app_min_android"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/layout_margin_medium"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textSize="@dimen/text_size_large" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin_medium"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_app_licence" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/layout_margin_medium"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="@string/app_licence"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_size_large" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/app_licence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/layout_margin_medium"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textSize="@dimen/text_size_large" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_divider_height"
        android:background="@color/colorDivider"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
