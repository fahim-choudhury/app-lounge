    android:paddingTop="@dimen/layout_padding_medium"
    android:paddingEnd="@dimen/layout_padding_large"
    android:paddingBottom="@dimen/layout_padding_medium">

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/app_icon_content_description"
        android:src="@drawable/ic_app_default" />

    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/layout_margin_medium"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:minLines="2"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_small"
        tools:text="App title" />

