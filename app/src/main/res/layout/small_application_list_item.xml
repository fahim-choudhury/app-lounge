    <!--        android:layout_height="30dp"-->
    <!--        android:ellipsize="end"-->
    <!--        android:padding="50dp"-->
    <!--        android:foregroundGravity="bottom"-->
    <!--        android:layout_below="@+id/app_install"-->
    <!--        >-->
    <!--    </View>-->


</RelativeLayout>