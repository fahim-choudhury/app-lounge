<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/errorIV"
        android:layout_width="64dp"
        android:layout_height="64dp"
        tools:contentDescription="@string/network_error_desc"
        tools:src="@drawable/ic_network_unavailable" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/errorTitleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="?android:textColorPrimary"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="@string/network_error_title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/errorDescTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="16sp"
        tools:text="@string/network_error_desc" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/retryButton"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="120dp"
        android:layout_height="43dp"
        android:layout_margin="5dp"
        android:backgroundTint="@color/colorAccent95"
        android:text="@string/retry"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        app:autoSizeTextType="uniform"
        app:cornerRadius="8dp"
        app:strokeColor="@color/colorAccent95"
        app:strokeWidth="1dp" />

</LinearLayout>